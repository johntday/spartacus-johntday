{
  "$schema": "http://json-schema.org/schema",
  "$id": "CONTENTFULSchematics",
  "title": "CONTENTFUL Schematics",
  "type": "object",
  "properties": {
    "project": {
      "type": "string",
      "description": "The name of the project.",
      "$default": {
        "$source": "projectName"
      }
    },
    "debug": {
      "description": "Display additional details during the running process.",
      "type": "boolean",
      "default": false
    },
    "lazy": {
      "type": "boolean",
      "description": "Lazy load the user features.",
      "default": false
    },
    "features": {
      "type": "array",
      "uniqueItems": true,
      "default": ["CONTENTFUL"]
    },
    "baseUrl": {
      "type": "string",
      "description": "The base URL.",
      "default": "https://graphql.contentful.com/content/v1/",
      "x-prompt": "[CONTENTFUL] What is your base URL?"
    }
  }
}
